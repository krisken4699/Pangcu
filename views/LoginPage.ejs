<body style="background-color: whitesmoke;">
  <div style="height: 5%;"></div>
  <div class="container" style=" padding: 0px">
    <div class="row" class="container">
      <div style="padding: 0px" class="col-sm-4"></div>
      <!--1/3 of page-->
      <div class="col-md-4">
        <!--2/3 of page-->
        <img src="./logo" style="display: block;
              margin-left: auto;
              margin-right: auto;
              object-fit: cover;
              width: 150px;
              height: 150px;  margin-bottom: 30px;" />
        <div style="margin: 10px; padding: 10px; background-color: #E4701E; border-radius: 10px; ">

          <h2 class="h2" style="text-align: center;">Login</h2>
          <form style="text-align: center; padding-bottom: 0px; height: min-content;">
            <p5 class="h4" style="display: block; text-align: center; color: #f5f5f5;">Username <span
                class="tooltiptext">Username cannot include ",".</span></p5>
            <input class="form-control" id="Username" style="width: 100%; height: 35px; font-size: medium;" type="text"
              placeholder="username" name="username" onchange="removeSpace(this)">
            <p3 style="text-align: left; display: block; font-style: italic; color: red; display:inline-block;"
              id="UserErr"></p3>
            <p5 class="h4" style="text-align: center;display: block; color: #f5f5f5;">Password </p5>
            <input class="form-control" id="Password" style=" width: 100%; font-size:medium; height: 35px" type="password"
              placeholder="password" name="Password" onchange="removeSpace(this)">
              <span onmouseup="document.getElementById('Password').type = 'password'" onmousedown="document.getElementById('Password').type = 'text'" class="fa fa-fw fa-eye field-icon toggle-password" style="cursor: pointer;"></span>
            <p3 style="text-align: left; display: block; font-style: italic; color: red; display:inline-block;"
              id="PassErr"></p3>
            <div style="text-align: left;">
              <div style="height: 40px; display: flex; justify-content: center; align-items: right; ">
                <!-- <label style="display: inline-block; top: 50%; text-align: right;" for="Keep">
                  <input type="checkbox" name="Keep" id="Keep">
                    Remember Me</label> -->
              </div>
              <!-- <input type="submit" style="height: 35px; width: 100%;"> -->
              <button id="submit" type="button" onclick="SendHashed()" class="btn btn-success"
                style="margin: 0px; width: 100%; height: 35px;border-radius: 35px;">Login</button>
              <style>
                #submit {
                  position: relative;
                  display: inline-block;
                  padding: 6px, 15px;
                  text-decoration: none;
                  /* background: #80c904; */
                  /* color: #ffffff; */
                  /* text-transform: uppercase; */
                  /* letter-spacing: 2px; */
                  overflow: hidden;
                  transition: 0.3s;
                  z-index: 1;
                }

                #submit:hover:before {
                  left: calc(100% + 100px);
                  transition: 0.2s;
                  transition-delay: 0.2s;
                }

                #submit:before {
                  content: '';
                  position: absolute;
                  top: 0;
                  left: -100px;
                  width: 80px;
                  height: 100%;
                  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
                  transform: skewX(35deg);
                  transition: 0s;
                }
              </style>
            </div>
          </form>
        </div>
      </div>
      <div class="col-sm-4" style="padding: 0px"></div>
      <!--3/3 of page-->
    </div>
